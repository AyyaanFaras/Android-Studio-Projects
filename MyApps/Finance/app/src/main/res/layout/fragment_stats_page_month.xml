<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    tools:context=".statCards.StatsPageMonth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Total Transactions:"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalMonthlyTransaction"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/dummynumber"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Average Spending"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Per Day"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dailyAverageSpendingPerMonth"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/dummynumber"
            android:textAlignment="textEnd"
            android:textColor="#f00"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Per Transaction"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/averageSpendingPerTransaction"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/dummynumber"
            android:textAlignment="textEnd"
            android:textColor="#f00"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Highest Spent"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/highestMoneySpentThisMonth"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/dummynumber"
            android:textAlignment="textEnd"
            android:textColor="#f00"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>